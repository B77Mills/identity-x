<BsModal @show={{true}} @backdrop="static" @size="large" @onClose={{action "returnToList"}} as |modal|>

  <form {{action this.onSubmit modal.actions.hide on="submit"}}>
    {{#modal.header}}
      <h2 class="modal-title">{{this.title}}</h2>
      <button
        type="button"
        class="close"
        aria-label="Close"
        {{action modal.actions.hide}}
      >
        {{entypo-icon "cross"}}
      </button>
    {{/modal.header}}

    {{#modal.body}}
      <div class="row">
        <div class="col">
          <div class="form-group">
            <FormElements::Label @for="segment.name" @required={{true}}>Name</FormElements::Label>
            <Input @id="segment.name" @type="text" @required={{true}} @autofocus={{true}} @class="form-control" @value={{this.model.name}} />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <FormElements::Label @for="segment.description">Description</FormElements::Label>
            <Textarea @id="segment.description" @class="form-control" @value={{this.model.description}} @rows={{3}} />
          </div>
        </div>
      </div>
    {{/modal.body}}

    {{#modal.footer class="justify-content-between"}}
      <FormElements::ToggleButton @value={{this.model.active}} @onLabel="Active" />
      <FormElements::SubmitButton @class="btn btn-success" @isSaving={{this.isActionRunning}} />
    {{/modal.footer}}
  </form>
</BsModal>
